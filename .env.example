# Example environment configuration for Children's Castle
# Copy this file to .env and fill in real values

# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key

# ElevenLabs configuration (for voice generation)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Session secret for Flask
FLASK_SECRET_KEY=your_secret_key_here

# Firebase configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain

# Firebase Storage settings for photo uploads
USE_FIREBASE_STORAGE=false  # Set to 'true' in production to use Firebase Storage for photos