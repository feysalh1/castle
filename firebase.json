
{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/__pycache__/**",
      "**/venv/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "https://story-time-fun.web.app",
        "type": 302
      }
    ]
  }
}
